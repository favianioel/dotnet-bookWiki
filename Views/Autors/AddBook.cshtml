@model BookWiki.ViewModels.AddAutorBookViewModel

@{
    ViewData["Title"] = "Add Book to Authors";
}

<form asp-controller="Autor" asp-action="AddBook" method="post">
    <div class="form-group">
        <label asp-for="BookId"></label>
        <select asp-for="BookId" asp-items="Model.Books"></select>
        <span asp-validation-for="BookId"></span>
    </div>
    <input type="hidden" name="AutorId" value="@Model.Autor.Id">
    <input type="submit" value="Add Book">
</form>